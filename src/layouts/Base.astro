---
// src/layouts/Base.astro
const { title = 'Blog', lang = 'tr' } = Astro.props;
const BASE = import.meta.env.BASE_URL; // "/blog/"
---
<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body style="font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; line-height:1.6; max-width:72ch; margin:2rem auto; padding:0 1rem;">
    <header style="display:flex; gap:.75rem; align-items:center; margin-bottom:1.5rem;">
      <a href={`${BASE}tr/`}>TR</a> | <a href={`${BASE}en/`}>EN</a>
      <a href={`${BASE}tr/`} style="margin-left:auto">Anasayfa</a>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
